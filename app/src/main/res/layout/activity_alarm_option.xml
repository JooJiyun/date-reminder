<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmOptionActivity"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:gravity="center">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="푸쉬 알람 설정\n"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/push_vibrate"
                android:text="진동"/>

            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/push_day"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일 전"/>
            <EditText
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:id="@+id/push_time"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시 "/>

            <Button
                style="?android:borderlessButtonStyle"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:id="@+id/push_pick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="선택"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="항상"/>

            <Button
                style="?android:borderlessButtonStyle"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:id="@+id/push_always"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="선택"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알람 없음"/>

            <Button
                style="?android:borderlessButtonStyle"
                android:drawableLeft="@drawable/ic_baseline_check_24"
                android:id="@+id/push_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="선택"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>