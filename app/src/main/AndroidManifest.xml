<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datereminder.datealarm">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_datereminder"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_datereminder_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id"/>

        <activity
            android:name="com.datereminder.datealarm.PickColorActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name="com.datereminder.datealarm.PickAlarmTypeActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name="com.datereminder.datealarm.AddAlarmDateActivity"
            android:theme="@style/Transparent" />
        <activity
            android:name="com.datereminder.datealarm.AddAlarmLastActivity"
            android:theme="@style/Transparent" />
        <activity android:name="com.datereminder.datealarm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>